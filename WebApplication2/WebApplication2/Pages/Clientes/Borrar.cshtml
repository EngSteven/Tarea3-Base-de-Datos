@page
@model WebApplication2.Pages.Clientes.BorrarModel
@{
}

<br />
<center>
    <h2>Borrar Empleado</h2>
</center>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.empleado.Nombre</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tipo de identificación</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.empleado.TipoDocIdentidad</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Valor de indentificación</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.empleado.ValorDocIdentidad</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fecha de nacimiento</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">Vacio de momento</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Puesto</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.empleado.Puesto</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Departamento</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.empleado.Departamento</label>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="col-sm text-start">
            <button type="submit" class="btn btn-danger" style="width: 500px">Confirmar</button>
        </div>
    </div>
</form>


<form asp-page-handler="Confirmar" method="post">
    <div class="row mb-3">
        <div class="col-sm text-start">
            <button class="btn btn-primary" style="width: 500px" name="NoComfirmar" role="button">Cancel</button>
        </div>
    </div>
</form>

